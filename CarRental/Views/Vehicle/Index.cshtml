@model IEnumerable<CarRental.CarRental.Domain.Vehicles.Vehicle>

@{
    ViewData["Title"] = "Araç Yönetimi";
}

<h2>@ViewData["Title"]</h2>

<!-- Araç Ekle Butonu -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Araç Ekle
</button>

<!-- Araçlar Tablosu -->
<table class="table table-bordered mt-3" id="vehiclesTable">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr id="vehicle-@vehicle.Id">
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Year</td>
                <td>
                    <!-- Düzenleme Butonu -->
                    <button class="btn btn-warning" onclick="editVehicle('@vehicle.Id')">Düzenle</button>
                    <!-- Silme Butonu -->
                    <button class="btn btn-danger delete-button" data-id="@vehicle.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">Sil</button>
               
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vehicleModalLabel">Araç Ekle/Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="vehicleForm">
                    <!-- Vehicle Id (Hidden) -->
                    <input type="hidden" id="vehicleId" name="Id" />

                    <!-- Brand -->
                    <div class="form-group">
                        <label for="brand">Marka</label>
                        <input type="text" class="form-control" id="brand" name="Brand" placeholder="Marka" required />
                    </div>

                    <!-- Model -->
                    <div class="form-group">
                        <label for="model">Model</label>
                        <input type="text" class="form-control" id="model" name="Model" placeholder="Model" required />
                    </div>

                    <!-- Year -->
                    <div class="form-group">
                        <label for="year">Yıl</label>
                        <input type="number" class="form-control" id="year" name="Year" placeholder="Yıl" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" id="saveButton">Kaydet</button>
            </div>
        </div>
    </div>
</div>


