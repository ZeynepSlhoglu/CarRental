<!-- Silme Onayı Modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Evet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script> 

        $(document).ready(function () {
            $("#saveButton").click(function (e) {
                debugger;
                e.preventDefault(); // Formun varsayılan gönderimini durdur

                // Formdan veri toplama
                var formData = new FormData();
                formData.append("Id", $("#vehicleId").val()); // ID
                formData.append("Brand", $("#brand").val()); // Marka
                formData.append("Model", $("#model").val()); // Model
                formData.append("Year", $("#year").val()); // Yıl

                // AJAX isteği
                $.ajax({
                    url: '/Vehicle/CreateFunc',
                    type: 'POST',
                    data: formData,
                    contentType: false, // FormData ile kullanıldığında false olmalı
                    processData: false, // jQuery'nin veriyi işleme sürecini devre dışı bırak
                    success: function (response) {
                        alert("Araç kaydı başarılı.");
                        $('#exampleModal').modal('hide'); // Modalı kapat
                        location.reload(); // Sayfayı yenile
                    },
                    error: function (xhr, status, error) {
                        alert("Hata: " + xhr.responseText);
                    }
                });
            });
        });

